{
    "name": "PyTorch",
    "context": "..",
    "dockerFile": "../Dockerfile",
    //Uncomment to load the image directly from Docker hub
    "image": "swisstonystark/docker-java-transformers:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "eamodio.gitlens",
                "mutantdino.resourcemonitor",
                "ms-azuretools.vscode-docker",
                "ms-toolsai.jupyter",
                "ms-python.black-formatter",
                "ziruiwang.nvidia-monitor",
                "github.copilot",
                "github.copilot-chat",
                "vscodevim.vim"
            ]
        }
    },
    "forwardPorts": [
        8080
    ],
    //Uncomment to run with GPU 
    "runArgs": [
        "--gpus",
        "all",
        "--ipc=host",
        "--ulimit",
        "memlock=-1",
        "--ulimit",
        "stack=67108864"
    ]
}